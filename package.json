{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "WebSocket chat application with React, Redux, and Redux-Saga",
  "main": "server/index.js",
  "scripts": {
    "server:dev": "nodemon server/index.js",
    "client:dev": "webpack serve --config webpack.dev.js",
    "client:build": "webpack --config webpack.prod.js",
    "build": "npm run client:build",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "node server/index.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^7.9.5",
    "redux": "^4.2.1",
    "redux-saga": "^1.2.3",
    "rive-react": "^4.23.4",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "nodemon": "^3.0.1",
    "sass": "^1.93.3",
    "sass-loader": "^16.0.6",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  }
}
